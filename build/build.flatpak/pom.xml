<?xml version="1.0" encoding="UTF-8"?>
<project 

	xsi:schemaLocation	="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns						="http://maven.apache.org/POM/4.0.0"
   xmlns:xsi				="http://www.w3.org/2001/XMLSchema-instance">

	<modelVersion>4.0.0</modelVersion>

	<artifactId>build-flatpak</artifactId>				<groupId>net.tourbook</groupId>
																		<version>18.9.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<parent>
		<artifactId>mytourbook-app</artifactId>			<groupId>net.tourbook</groupId>
																		<version>18.9.0-SNAPSHOT</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<build>
	
		<plugins>

			<plugin>
			   <artifactId>eclipse-flatpak-packager</artifactId>		<groupId>org.eclipse.cbi.maven.plugins</groupId>
																						<version>1.1.5</version>
				<executions>
					<execution>
						<id>make-assembly</id> <!-- this is used for inheritance merges -->
						<phase>package</phase> <!-- bind to the packaging phase -->
						<goals>
							<goal>single</goal>
						</goals>

						<configuration>
							<id>mt-flatpak</id>
							<description>This is the flatpack packager</description>
							<source>${project.build.directory}\products\mytourbook-${tycho-version}-linux.gtk.x86_64.zip</source>
						</configuration>
					</execution>
				</executions>
			</plugin>			
			
		</plugins>
	</build>
</project>
